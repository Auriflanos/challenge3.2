{% extends "layout.njk" %}
{% block head %}
    <title>Portfolio - Lucas Gon√ßalves</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
{% endblock %}
{% block content %}
    <div id="wrapper">
        <h1>
            Aulas
        </h1>
    </div>
    <section class="cards">
        {% for item in items %}
            <div class="card" id="{{item.id}}">
                <div class="card__image-container">
                    <img src="{{item.url}}">
                </div>
                <div class="card__content">
                    <p>{{item.title}}</p>
                </div>
                <div class="card__info">
                    <p>{{item.duration}}</p>
                    <p class="card__price">{{item.subtitle}}</p>
                </div>
            </div>
        {% endfor %}
    </section>
    <div class="modal-overlay">
        <div class="modal">
            <a class="fullscreen-modal">
                <i class="material-icons">fullscreen</i>
            </a>
            <a class="close-modal">
                <i class="material-icons">close</i>
            </a>
            <div
                class="modal-content">
                <!--Blog Aqui-->
                <iframe src="" frameborder="0"></iframe>
            </div>
        </div>
    </div>
    <script src="scripts.js"></script>
{% endblock %}
{% block footer %}{% endblock %}